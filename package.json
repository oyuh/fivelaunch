{
  "name": "fivelaunch",
  "version": "1.1.1",
  "description": "FiveLaunch - launch FiveM with select mods and settings",
  "main": "./out/main/index.js",
  "author": "Lawson Hart",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/oyuh/fivelaunch",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm typecheck:node && pnpm typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "pnpm typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "pnpm build && electron-builder --config electron-builder.config.cjs --dir",
    "build:win:portable": "pnpm build && electron-builder --config electron-builder.config.cjs --win portable",
    "build:win": "pnpm build && electron-builder --config electron-builder.config.cjs --win dir && node scripts/win-dist-fast.js",
    "build:mac": "pnpm build && electron-builder --config electron-builder.config.cjs --mac",
    "build:linux": "pnpm build && electron-builder --config electron-builder.config.cjs --linux",
    "tag:latest": "git fetch --tags && git describe --tags --abbrev=0",
    "tag:next": "node -e \"const cp=require('child_process');let t='v0.0.0';try{t=cp.execSync('git describe --tags --abbrev=0').toString().trim()}catch{};const m=t.match(/v(\\d+)\\.(\\d+)\\.(\\d+)/);if(!m){console.log('Latest tag:',t);process.exit(0)};const [maj,min,pat]=m.slice(1).map(Number);const next=`v${maj}.${min}.${pat+1}`;console.log('Latest tag:',t);console.log('Suggested next tag:',next);console.log('Run: git tag '+next+' && git push origin '+next);\"",
    "tag:cli": "node scripts/tag-release.js",
    "release:cli": "node scripts/release.js"
  },
  "dependencies": {
    "@fontsource/geist-mono": "^5.2.7",
    "@fontsource/geist-sans": "^5.2.5",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.7.3",
    "fast-xml-parser": "^5.3.5",
    "lucide-react": "^0.469.0",
    "tailwind-merge": "^2.6.1"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@swc/core": "^1.15.11",
    "@types/node": "^18.19.130",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.24",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite": "^5.4.21"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "build": {
    "appId": "com.lawsonhart.fivelaunch",
    "productName": "FiveLaunch",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "out/**",
      "package.json",
      "resources/**",
      "!dist/**",
      "!**/*.map",
      "!**/*.tsbuildinfo",
      "!**/.DS_Store"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "win": {
      "icon": "resources/Logo-Windows.ico",
      "artifactName": "FiveLaunch.exe",
      "target": [
        "portable"
      ]
    },
    "mac": {
      "icon": "resources/Logo.png"
    },
    "linux": {
      "icon": "resources/Logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
